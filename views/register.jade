extends layout

block content
  .col-sm-4.col-sm-offset-4
    form#register
      .form-group
        label(for='regFirst') Name
        input#regFirst.form-control(type='text', placeholder='First Last')           
      .form-group
        label(for='regEmail') Email address
        input#regEmail.form-control(type='email', placeholder='Email')
      .form-group
        label(for='regPassword') Password
        input#regPassword.pass.form-control(type='password', placeholder='Password')
      .form-group
        label(for='regPassword2') Password Again
        input#regPassword2.pass.form-control(type='password', placeholder='Password Again')
      button#loginButton.btn.btn-default(type='submit') Submit