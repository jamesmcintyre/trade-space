extends layout

block content
  .row
    .col-sm-12
      h3= 'Item Name: '+itemData.name
      p= 'Description: '+itemData.description
      p= 'Owner: '+itemData.ownerId.name
      if itemData.requested
        p= "Requester is: "+itemData.requesterId.name
      if itemData.listed
        p= "Item is Listed for Trade!"
      button.btn.btn-success.btn-lg.viewitem
        a(href= '/items/tradereq/' + itemData._id + "/" + userId) Request Trade!
